{
  "version": "1.15.2+300",
  "description": "Reeden is an Ebook reader supports EPUB/MOBI/AZW3/PDF",
  "homepage": "https://reeden.app",
  "license": "Proprietary",

  // 用编码后的 +，与官网链接保持一致
  "url": "https://download.reeden.app/Reeden/1.15.2%2B300/Reeden-1.15.2%2B300-windows.zip",
  "hash": "C326565222366D9CA4857A6BD13E81677CA5DF5128275E97C481537ADD0AAA11",

  "shortcuts": [["Reeden.exe", "Reeden"]],

  "checkver": {
    // 直接抓官网“Download”页上的 Windows 下载链接
    "url": "https://reeden.app/download",
    // 既能匹配 href 中的 %2B，也能匹配 +；抓 ver 和 build 两段
    "regex": "Reeden\\/(?<ver>[0-9.]+)(?:%2B|\\+)(?<build>\\d+)\\/Reeden-\\k<ver>(?:%2B|\\+)\\k<build>-windows\\.zip",
    // 还原成 manifest 用的版本格式：x.y.z+build
    "replace": "${ver}+${build}",
    "reverse": true
  },

  "autoupdate": {
    // 使用命名分组，且在 URL 中固定使用 %2B（与服务器一致）
    "url": "https://download.reeden.app/Reeden/$matchVer%2B$matchBuild/Reeden-$matchVer%2B$matchBuild-windows.zip"
  }
}
